{
    "id": "com.eminfedar.vaktisalah-gtk",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "vaktisalah-gtk",
    "finish-args": [
        "--share=network",
        "--socket=pulseaudio",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland"
    ],

    "modules": [
        {
            "name": "libsass",
            "buildsystem":"meson",
            "builddir": true,
            "sources": [
                {
                    "type":"git",
                    "url":"https://github.com/lazka/libsass.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem":"meson",
            "builddir": true,
            "sources": [
                {
                    "type":"git",
                    "url":"https://github.com/lazka/sassc.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem":"meson",
            "config-opts" : [
                "-Dvapi=false",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type":"git",
                    "url":"https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag": "1.3.2"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
              {
                "type": "git",
                "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                "tag": "v0.6.0"
              }
            ]
        },
        {
            "name": "vaktisalah-gtk",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/eminfedar/vaktisalah-gtk-rs",
                    "tag": "v1.0.0"
                  }
            ],
            "build-options": {
                "append-path" : "/usr/lib/sdk/rust-stable/bin",
                "build-args": [
                    "--share=network"
                ],
                "env" : {
                    "CARGO_HOME" : "/run/build/vaktisalah-gtk/.cargo",
                    "LOCALIZATION_DIR": "../localization/"
                }
            },
            "build-commands": [
                "cargo build --release --target x86_64-unknown-linux-gnu",
                "install -Dm755 ./target/x86_64-unknown-linux-gnu/release/vaktisalah-gtk-rs -t /app/bin/"
            ],
            "post-install": [
                "install -Dm644 export/com.eminfedar.vaktisalah-gtk.svg /app/share/icons/hicolor/scalable/apps/com.eminfedar.vaktisalah-gtk.svg",
                "install -Dm644 export/com.eminfedar.vaktisalah-gtk.desktop /app/share/applications/com.eminfedar.vaktisalah-gtk.desktop",
                "install -Dm644 export/com.eminfedar.vaktisalah-gtk.appdata.xml /app/share/metainfo/com.eminfedar.vaktisalah-gtk.appdata.xml"
            ]
        }
    ]
}
